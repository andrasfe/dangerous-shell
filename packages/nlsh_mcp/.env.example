# nlsh-mcp server configuration

# Required: Path to MCP server's Ed25519 private key
# Generate with: python -m shared.keygen mcp
NLSH_MCP_PRIVATE_KEY_PATH=~/.nlsh/keys/mcp_private.key

# Required: Path to nlsh client's Ed25519 public key
# Copy from nlsh client machine after key generation
NLSH_PUBLIC_KEY_PATH=~/.nlsh/keys/nlsh_public.key

# Remote server connection (via SSH tunnel - usually localhost)
NLSH_REMOTE_HOST=127.0.0.1
NLSH_REMOTE_PORT=8765

# Timeouts
NLSH_CONNECTION_TIMEOUT=30.0
NLSH_COMMAND_TIMEOUT=300

# MCP server identification (optional)
NLSH_MCP_SERVER_NAME=nlsh_remote_mcp
NLSH_MCP_VERSION=1.0.0
